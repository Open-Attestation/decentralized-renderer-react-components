{
  "name": "@govtechsg/decentralized-renderer-react-components",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "main": "build/index.js",
  "module": "build/esm/index.js",
  "types": "build//esm/index.d.ts",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@govtechsg/open-attestation": "^4.6.0",
    "debug": "^4.3.1",
    "penpal": "^4.1.1",
    "react-pdf": "^5.2.0",
    "typesafe-actions": "^4.4.2"
  },
  "scripts": {
    "build": "NODE_ENV=production webpack --mode production && tsc --module es6 --declaration --outDir build/esm",
    "example:application": "webpack-dev-server --config ./example/application/webpack.config.js",
    "example:renderer": "webpack-dev-server --config ./example/decentralized-renderer/webpack.config.js",
    "example:legacy-renderer": "npx http-server ./example/legacy-renderer",
    "lint": "eslint . --ext .ts,.tsx,.mdx --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook -o docs",
    "test": "jest --ci",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "7.13.0",
    "@emotion/babel-preset-css-prop": "10.0.17",
    "@emotion/core": "^10.0.17",
    "@emotion/styled": "^10.0.17",
    "@storybook/addon-actions": "5.2.1",
    "@storybook/addon-docs": "5.2.1",
    "@storybook/addons": "5.2.1",
    "@storybook/react": "5.2.1",
    "@testing-library/react": "9.1.4",
    "@types/debug": "4.1.5",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.4",
    "@types/react-pdf": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-mdx": "^1.12.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "jest": "^26.6.3",
    "prettier": "2.2.1",
    "react": "^17.0.2",
    "react-component-component": "1.2.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^17.0.2",
    "react-frame-component": "^4.1.1",
    "semantic-release": "^15.13.24",
    "typescript": "^4.2.4",
    "webpack": "4.39.3",
    "webpack-cli": "3.3.7",
    "webpack-dev-server": "^3.11.2"
  },
  "license": "Apache-2.0",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript",
      "@babel/preset-react",
      "@emotion/babel-preset-css-prop"
    ]
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Opera versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 1 Safari version",
    "IE >= 11"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:jest/all",
      "plugin:mdx/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "react-hooks"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "react/prop-types": "off",
      "react/self-closing-comp": "error",
      "jest/prefer-expect-assertions": "off",
      "array-callback-return": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error"
    },
    "overrides": [
      {
        "files": [
          "*.md"
        ],
        "rules": {
          "prettier/prettier": [
            2,
            {
              "parser": "markdown"
            }
          ]
        }
      },
      {
        "files": [
          "*.mdx"
        ],
        "extends": [
          "plugin:mdx/overrides"
        ]
      }
    ]
  },
  "jest": {
    "coverageDirectory": "coverage"
  },
  "prettier": {
    "printWidth": 120
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Open-Attestation/decentralized-renderer-react-components.git"
  }
}
