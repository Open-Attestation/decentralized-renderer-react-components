{
  "name": "@tradetrust-tt/decentralized-renderer-react-components",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "main": "build/index.js",
  "module": "build/esm/index.js",
  "types": "build/types/index.d.ts",
  "type": "module",
  "dependencies": {
    "@babel/runtime-corejs3": "^7.24.0",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@tradetrust-tt/tradetrust": "^6.9.0",
    "crypto-browserify": "^3.12.0",
    "debug": "^4.3.4",
    "penpal": "^6.2.2",
    "penpal-v4": "npm:penpal@^4.1.1",
    "react-pdf": "^7.7.1",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^29.1.2",
    "typesafe-actions": "^5.1.0",
    "vm-browserify": "^1.1.2"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production npm run clean:build && npm run build:types && npm run build:es && npm run build:umd -- --mode production",
    "build:umd": "webpack",
    "build:es": "cross-env babel src --no-babelrc --out-dir build/esm --extensions '.ts,.tsx' --source-maps --config-file ./.es.babelrc",
    "build:types": "tsc --emitDeclarationOnly --declarationDir build/types",
    "clean:build": "rm -rf ./build",
    "example:application": "webpack serve --config ./example/application/webpack.config.cjs",
    "example:renderer": "webpack serve --config ./example/decentralized-renderer/webpack.config.cjs",
    "example:legacy-renderer": "npx http-server ./example/legacy-renderer",
    "lint": "eslint . --ext .ts,.tsx,.mdx --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build -o docs",
    "test": "jest --ci",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.24.0",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@emotion/babel-preset-css-prop": "^11.11.0",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-mdx-gfm": "^7.6.17",
    "@storybook/blocks": "^7.6.17",
    "@storybook/react": "^7.6.17",
    "@storybook/react-webpack5": "^7.6.17",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/debug": "4.1.12",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.58",
    "@types/react-dom": "^18.2.19",
    "@types/react-pdf": "^6.2.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.5.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-mdx": "^3.1.5",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "3.2.5",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-frame-component": "^5.2.6",
    "semantic-release": "^21.1.2",
    "storybook": "^7.6.17",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2"
  },
  "license": "Apache-2.0",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:mdx/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "react-hooks"
    ],
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "react/prop-types": "off",
      "react/self-closing-comp": "error",
      "array-callback-return": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error",
      "react/no-unknown-property": [
        "error",
        {
          "ignore": [
            "css"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "*.md"
        ],
        "rules": {
          "prettier/prettier": [
            2,
            {
              "parser": "markdown"
            }
          ]
        }
      },
      {
        "files": [
          "*.mdx"
        ],
        "extends": [
          "plugin:mdx/overrides"
        ]
      },
      {
        "files": [
          "*.test.js",
          "*.test.ts",
          "*.test.tsx",
          "*.spec.js",
          "*.spec.ts",
          "*.spec.tsx"
        ],
        "extends": [
          "plugin:jest/all"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "jest/prefer-expect-assertions": "off"
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 120
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TradeTrust/decentralized-renderer-react-components.git"
  },
  "engines": {
    "node": "18.x"
  }
}
